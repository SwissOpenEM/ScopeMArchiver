{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend API",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "PREFECT_API_URL": "http://localhost:4200/api",
        "PREFECT_LOGGING_LEVEL": "DEBUG",
        "MINIO_ENDPOINT": "http://scopem-openem.ethz.ch:9000",
        "MINIO_USER": "minio_user",
        "MINIO_PASSWORD": "minio_pass",
        "UVICORN_ROOT_PATH": "",
        "UVICORN_RELOAD": "true",
        "UVICORN_LOG_LEVEL": "debug",
        "UVICORN_PORT": "8888"
      },
      "module": "api",
      "args": [
        "--reload"
      ],
      "jinja": true
    },
    {
      "name": "Prefect Flows",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "env": {
        "PREFECT_API_URL": "http://localhost/api",
        "PREFECT_LOGGING_LEVEL": "DEBUG",
        "MINIO_ENDPOINT": "localhost:9000",
        "MINIO_EXTERNAL_ENDPOINT": "localhost:9000",
        "LTS_STORAGE_ROOT": "/tmp/data/LTS/",
        "LTS_FREE_SPACE_PERCENTAGE": "0.2",
        "ARCHIVER_SCRATCH_FOLDER": "/tmp/data/scratch/",
      },
      "module": "archiver.flows",
      "jinja": true
    },
    {
      "name": "Prefect Config",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "env": {
        "PREFECT_API_URL": "http://localhost:4200/api",
        "MINIO_PASSWORD_FILE": "${workspaceFolder}/../.secrets/miniopass.txt"
      },
      "program": "prefect-config.py",
      "args": [
        "-s",
        "MINIO_PASSWORD_FILE",
        "-l",
        "${workspaceFolder}/concurrency-limits.toml"
      ]
    },
  ],
  "compounds": [
    {
      "name": "Archiver Service",
      "configurations": [
        "Backend API",
        "Prefect Flows"
      ],
      "stopAll": true
    }
  ]
}