{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend API",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "PREFECT_API_URL": "http://test-host/api",
        "API_ROOT_PATH": "/",
        "API_RELOAD": "true"
      },
      "module": "api",
      "args": [
        "--config",
        "${workspaceRoot}/config.toml"
      ],
      "jinja": true
    },
    {
      "name": "Prefect Worker",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "PREFECT_API_URL": "http://test-host/api",
        "PREFECT_LOGGING_LEVEL": "DEBUG",
        "SCICAT_ENDPOINT": "http://localhost:3000",
        "LTS_STORAGE_ROOT": "${workspaceRoot}/../data/LTS/",
        "ARCHIVER_SCRATCH_FOLDER": "${workspaceRoot}/../data/archiving/",
        "MINIO_URL": "test-host:9000"
      },
      "module": "archiver.flows",
      "args": [
        "--config",
        "${workspaceRoot}/config.toml"
      ],
      "jinja": true
    },
    {
      "name": "SciCat API Mock",
      "type": "debugpy",
      "request": "launch",
      "env": {},
      "module": "uvicorn",
      "args": [
        "archiver.tests.scicat_service_mock:app",
        "--reload",
        "--port",
        "3000",
      ],
      "jinja": true
    },
  ],
  "compounds": [
    {
      "name": "Archiver Service",
      "configurations": [
        "Backend API",
        "Prefect Worker",
        "SciCat API Mock",
      ],
      "stopAll": true
    }
  ]
}