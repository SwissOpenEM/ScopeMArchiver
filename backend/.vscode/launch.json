{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend API",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "PREFECT_API_URL": "http://localhost:4200/api",
        "PREFECT_LOGGING_LEVEL": "DEBUG",
        "API_ROOT_PATH": "/",
        "API_RELOAD": "true"
      },
      "module": "api",
      "args": [
        "--config",
        "${workspaceRoot}/config.toml"
      ],
      "jinja": true
    },
    {
      "name": "Prefect Flows",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "env": {
        "PREFECT_API_URL": "http://localhost:4200/api",
        // "PREFECT_API_URL": "http://scopem-openem:4200/api",
        "PREFECT_LOGGING_LEVEL": "DEBUG",
        "SCICAT_ENDPOINT": "http://localhost:8005",
        "MINIO_URL": "localhost:9000",
        "LTS_STORAGE_ROOT": "/tmp/data/LTS/",
        "ARCHIVER_SCRATCH_FOLDER": "/tmp/data/scratch/",
      },
      "module": "archiver.flows",
      "jinja": true
    },
    {
      "name": "SciCat API Mock",
      "type": "debugpy",
      "request": "launch",
      "env": {},
      "module": "uvicorn",
      "args": [
        "archiver.tests.scicat_service_mock:app",
        "--reload",
        "--port",
        "8005",
      ],
      "jinja": true
    },
  ],
  "compounds": [
    {
      "name": "Archiver Service",
      "configurations": [
        "Backend API",
        "Prefect Flows",
        "SciCat API Mock",
      ],
      "stopAll": true
    }
  ]
}