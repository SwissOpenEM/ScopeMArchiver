{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend API",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "ARCHIVER_ENABLED": "True",
        "INGESTER_ENABLED": "True",
        "PREFECT_API_URL": "http://127.0.0.1:4200/api"
      },
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload"
      ],
      "jinja": true
    },
    {
      "name": "Prefect Worker",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "PREFECT_API_URL": "http://localhost/api",
        "PREFECT_LOGGING_LEVEL": "DEBUG",
        "MINIO_URL": "localhost:9000",
        "MINIO_USER": "minioadmin",
        "MINIO_PASS": "minioadmin",
        "MINIO_RETRIEVAL_BUCKET": "retrieval.openem-dev.ethz.ch",
        "MINIO_STAGING_BUCKET": "staging.openem-dev.ethz.ch",
        "MINIO_LANDINGZONE_BUCKET": "landingzone.openem-dev.ethz.ch",
        "SCICAT_ENDPOINT": "http://localhost/scicatmock",
        "LTS_STORAGE_ROOT": "${workspaceRoot}/../data/LTS/"
      },
      "module": "archiver.flows",
      "jinja": true
    },
    {
      "name": "SciCat API Mock",
      "type": "debugpy",
      "request": "launch",
      "env": {},
      "module": "uvicorn",
      "args": [
        "archiver.tests.scicat_api_mock:app",
        "--reload",
        "--port",
        "3000",
      ],
      "jinja": true
    },
  ],
  "compounds": [
    {
      "name": "Archiver Service",
      "configurations": [
        "Backend API",
        "Prefect Worker",
        "SciCat API Mock",
      ],
      "stopAll": true
    }
  ]
}