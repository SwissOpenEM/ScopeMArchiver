{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend API",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "ARCHIVER_ENABLED": "True",
        "INGESTER_ENABLED": "True",
        "PREFECT_API_URL": "http://127.0.0.1:4200/api"
      },
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload"
      ],
      "jinja": true
    },
    {
      "name": "Prefect Worker",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "PREFECT_API_URL": "http://127.0.0.1:4200/api",
        "SCICAT_ENDPOINT": "http://127.0.0.1:3000"
      },
      "module": "archiver.flows",
      "jinja": true
    },
    {
      "name": "SciCat API Mock",
      "type": "debugpy",
      "request": "launch",
      "env": {},
      "module": "uvicorn",
      "args": [
        "archiver.tests.scicat_api_mock:app",
        "--reload",
        "--port",
        "3000",
      ],
      "jinja": true
    },
  ],
  "compounds": [
    {
      "name": "Archiver Service",
      "configurations": [
        "Backend API",
        "Prefect Worker",
        "SciCat API Mock",
      ],
      "stopAll": true
    }
  ]
}